pipeline {
  agent any

  environment {
    AWS_REGION = 'eu-west-2'
    S3_BUCKET = 's3-jenkins-docker-992382459829'
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/shilpa5010/react-examples.git'
      }
    }

    stage('Install') {
      steps {
        sh 'npm install'
      }
    }

    stage('Build') {
      steps {
        sh 'npm run build'
      }
    }

    stage('Test') {
      steps {
        sh 'echo "Running tests (you can add real tests here)"'
      }
    }

    stage('Package (Optional)') {
      steps {
        sh 'zip -r app.zip *'
      }
    }

    stage('Deploy to S3') {
      steps {
        withAWS(region: "${AWS_REGION}", credentials: 'AWS') {
          // Upload unzipped contents to S3 bucket root (or choose a subfolder)
          s3Upload(bucket: "${S3_BUCKET}", workingDir: '.', includePathPattern: '**/*')
        }
      }
    }
  }

  post {
    success {
      echo 'Deployment Successful!'
    }
    failure {
      echo 'Deployment Failed!'
    }
  }
}
